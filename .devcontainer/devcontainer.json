{
    "name": "Geomatique Python - Raster et Vecteur",
    "image": "mcr.microsoft.com/devcontainers/python:3.11", 
    "features": {
      "ghcr.io/devcontainers-contrib/features/gdal:1": {
        "version": "latest"
      }
    },
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance"
        ]
      }
    }
  }
  